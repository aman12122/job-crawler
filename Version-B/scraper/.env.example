# Job Crawler Version B - Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=job_crawler
DATABASE_USER=jobcrawler
DATABASE_PASSWORD=your_password_here

# ===========================================
# GOOGLE GEMINI AI CONFIGURATION
# ===========================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Rate limiting (free tier: 15 requests per minute)
AI_REQUESTS_PER_MINUTE=15

# ===========================================
# SCRAPER CONFIGURATION
# ===========================================
# Maximum concurrent page fetches
MAX_CONCURRENT_FETCHES=5

# Delay between requests to the same domain (seconds)
REQUEST_DELAY=1.0

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
